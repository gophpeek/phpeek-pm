FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    tzdata \
    && rm -rf /var/lib/apt/lists/*

# Copy phpeek-pm binary
COPY build/phpeek-pm-linux-amd64 /usr/local/bin/phpeek-pm
RUN chmod +x /usr/local/bin/phpeek-pm

# Copy test configuration
COPY tests/integration/test-config.yaml /etc/phpeek-pm/phpeek-pm.yaml

# Run tests
COPY tests/integration/run-tests.sh /run-tests.sh
RUN chmod +x /run-tests.sh

CMD ["/run-tests.sh"]
